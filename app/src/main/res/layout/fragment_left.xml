<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.LeftFragment">

    <TextView
        android:id="@+id/nombre"
        android:text=""
        android:textSize="25sp"
        android:layout_margin="25dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/txtNombre"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
    />

    <TextView
        android:id="@+id/nickname"
        android:text=""
        android:textSize="25sp"
        android:layout_margin="25dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/txtNickname"
        app:layout_constraintTop_toBottomOf="@+id/nombre"
        />

    <TextView
        android:text=""
        android:id="@+id/nivel"
        android:textSize="25sp"
        android:layout_margin="25dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/txtNivel"
        app:layout_constraintTop_toBottomOf="@+id/nickname"
        />

    <TextView
        android:id="@+id/pokemons"
        android:text=""
        android:textSize="25sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        app:layout_constraintLeft_toRightOf="@+id/pokes"
        app:layout_constraintTop_toBottomOf="@+id/nivel"
        />

    <TextView
        android:id="@+id/txtNombre"
        android:text="Nombre: "
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/nombre"
        app:layout_constraintBottom_toBottomOf="@+id/nombre"
        app:layout_constraintRight_toLeftOf="@+id/nombre"
        />

    <TextView
        android:id="@+id/txtNickname"
        android:text="Nombre: "
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/nickname"
        app:layout_constraintBottom_toBottomOf="@+id/nickname"
        app:layout_constraintRight_toLeftOf="@+id/nickname"
        />

    <TextView
        android:id="@+id/txtNivel"
        android:text="Nivel: "
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/nivel"
        app:layout_constraintBottom_toBottomOf="@+id/nivel"
        app:layout_constraintRight_toLeftOf="@+id/nivel"
        />

    <TextView
        android:id="@+id/pokes"
        android:text="Capturados #: "
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/pokemons"
        app:layout_constraintBottom_toBottomOf="@+id/pokemons"
        app:layout_constraintRight_toLeftOf="@+id/pokemons"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_margin="25dp"
        android:layout_height="150dp"
        tools:layout_editor_absoluteX="149dp"
        tools:src="@drawable/images"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>